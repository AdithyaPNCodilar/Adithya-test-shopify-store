<!-- offers-section.liquid -->
<div class="product-offers">
    <h2 class="section-heading">Offers</h2>
    <div class="offer-box">
        <span class="offer-icon">{{ section.settings.offer_icon }}</span>
        <span class="offer-text">{{ section.settings.offer_text }}</span>
    </div>
    <a href="{{ section.settings.more_offers_link }}" class="more-offers-link" style="text-decoration: none;">{{ section.settings.more_offers_text }}</a>
    <div class="benefits">
        <div class="benefit">
            <span class="benefit-icon">{{ section.settings.benefit1_icon }}</span>
            <span class="benefit-text">{{ section.settings.benefit1_text }}</span>
        </div>
        <div class="benefit">
            <span class="benefit-icon">{{ section.settings.benefit2_icon }}</span>
            <span class="benefit-text">{{ section.settings.benefit2_text }}</span>
        </div>
        <div class="benefit">
            <span class="benefit-icon">{{ section.settings.benefit3_icon }}</span>
            <span class="benefit-text">{{ section.settings.benefit3_text }}</span>
        </div>
    </div>
</div>

